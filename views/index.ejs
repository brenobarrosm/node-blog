<body>
    <div class="container">
        <hr>
        <h1>Artigos publicados</h1>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h4><a href="/<%= article.slug %>"><%= article.title %></a></h4>
                </div>
                <div class="card-footer">
                    <a href="/<%= article.slug %>" class="btn btn-warning">Ler</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a style="float: right;" href="/articles/page/2">Next >></a>
            </div>
        </div>
    </div>

    
</body>

