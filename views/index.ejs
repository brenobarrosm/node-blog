<%- include ('partials/header.ejs') %>
<%- include ('partials/homenavbar.ejs')%>

<body>
    <div class="container">
        <hr>
        <h1>Artigos publicados</h1>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h4><a href="/<%= article.slug %>"><%= article.title %></a></h4>
                </div>
                <div class="card-footer">
                    <a href="/<%= article.slug %>" class="btn btn-warning">Ler</a>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>

