<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs')%>

<body>
    <div class="container">
        <hr>
        <h1>Artigos publicados</h1>
        <hr>
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h4><a href="/<%= article.slug %>"><%= article.title %></a></h4>
                </div>
                <div class="card-footer">
                    <a href="/<%= article.slug %>" class="btn btn-warning">Ler</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
          
                <% if(result.page > 2) { %>
                    <a style="float: left;" href="/articles/page/<%= result.page-1 %>"><< Prev</a>
                <% } else if(result.page == 2) { %>
                    <a style="float: left;" href="/<%= result.page-1 %>"><< Prev</a>
                <% } %>
              

                <% if(result.next) { %>
                    <a style="float: right;" href="/articles/page/<%= result.page+1 %>">Next >></a>
                <% } %>
            </div>
        </div>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>